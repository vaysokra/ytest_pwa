@* File upload *@
<InputFile id="fileInput" hidden multiple />
<MudButton HtmlTag="label"
        Variant="Variant.Filled"
        Color="Color.Primary"
        StartIcon="@Icons.Filled.CloudUpload"
        for="fileInput"
        Class="mt-16">
    Upload Files
</MudButton>
